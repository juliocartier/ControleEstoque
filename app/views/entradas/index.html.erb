<h1>Entradas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Unidade</th>
      <th>Valor Unitario</th>
      <th>Valor Total</th>
      <th>Data de Entrada</th>
      <th>Descrição</th>
      <th>Visualizar</th>
      <th>Editar</th>
      <th>Deletar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entradas.each do |entrada| %>
      <tr>
        <td><%= entrada.nome %></td>
        <td><%= entrada.unidade %></td>
        <td><%= entrada.valorUnit %></td>
        <td><%= entrada.valotTotal %></td>
        <td><%= entrada.dataEntrada %></td>
        <td><%= entrada.descricao %></td>
        <td><%= link_to 'Visualizar', entrada %></td>
        <td><%= link_to 'Editar', edit_entrada_path(entrada) %></td>
        <td><%= link_to 'Deletar', entrada, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

