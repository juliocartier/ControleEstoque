    <label>Unidades</label>
    <%= form.text_field :unidade, id: :entrada_unidade %>
  </div>

  <div class="field">
    <label>Valor Unitario</label>
    <%= form.text_field :valorUnit, id: :entrada_valorUnit %>
  </div>

  <div class="field">
    <label>Valor Total</label>
    <%= form.text_field :valotTotal, id: :entrada_valotTotal %>
  </div>

  <div class="field">
    <label>Data de Entrada</label>
    <%= form.date_select :dataEntrada, id: :entrada_dataEntrada %>
  </div>

  <div class="field">
    <label>Descrição</label>
    <%= form.text_area :descricao, id: :entrada_descricao %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
